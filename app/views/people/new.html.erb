<h2>Create a new person</h2>

<%= form_for(@person) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <br>
  Addresses:
  <ol>
    <%= f.fields_for :addresses do |a| %>
      <li>
        <p>
          <%= a.label :kind %>
          <%= a.text_field :kind %>
        </p>
        <p>
          <%= a.label :street_address %>
          <%= a.text_field :street_address %>
        </p>
        <p>
          <%= a.label :city %>
          <%= a.text_field :city %>
        </p>
        <p>
          <%= a.label :state %>
          <%= a.text_field :state %>
        </p>
        <p>
          <%= a.label :zip %>
          <%= a.text_field :zip %>
        </p>
      </li>
    <% end %>
  </ol>
  <p>
    <%= f.submit %>
  </p>
<% end %>
