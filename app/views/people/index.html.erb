<h1>Address Book</h1>

<ul>
  <% @people.each do |person| %>
    <h3><%= person.name %></h3>
    <ul>
      <% person.addresses.each do |address| %>
      <li><%= address.kind %>: <%= address.street_address %>, <%= address.city %>, <%= address.state %>, <%= address.zip %></li>
      <% end %>
    </ul>
    <% link_to 'Add Address', new_address_path %>
  <% end %>
</ul>

<%= link_to 'Create New Person', new_person_path %>
